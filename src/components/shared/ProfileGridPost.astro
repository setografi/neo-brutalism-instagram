export interface Props{
    postone:string,
    posttwo:string,
    postthree:string,
}
const {postone, posttwo, postthree} = Astro.props
---

<div class="flex flex-wrap -mx-px">
    <div class="w-1/3 p-[0.5px]">
        <div>
            <img class="object-cover" src={postone} alt="image">
        </div>
    </div>

    <div class="w-1/3 p-[0.5px]">
        <div>
            <img class="object-cover" src={posttwo} alt="image">
        </div>
    </div>

    <div class="w-1/3 p-[0.5px]">
        <div>
            <img class="object-cover" src={postthree} alt="image">
        </div>
    </div>
</div>